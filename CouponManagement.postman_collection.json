  "item": [
    {
      "name": "Create Cart-wise Coupon",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"cart_wise\",\n  \"details\": {\n    \"threshold\": 500.0,\n    \"discount\": 10.0\n  }\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/coupons",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "coupons"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has coupon ID\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.not.be.undefined;",
              "    pm.environment.set(\"coupon_id\", jsonData.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
